<main class="main">
  <form class="product-form" action="/admin/product" method="POST">
    <div class="form-control">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" 
      value="<%= edit ? product.title : '' %>"/>
      <label for="description">Description</label>
      <input type="text" name="description" id="description"
      value="<%= edit ? product.description : '' %>"/>
      <label for="image">Image</label>
      <input type="text" name="imageURL" id="image"
      value="<%= edit ? product.imageURL : '' %>" />
      <label for="price">Price</label>
      <input type="text" name="price" id="price"
      value="<%= edit ? product.price : '' %>" />
      <input type="hidden" name="id"
      value="<%= edit ? product.id : '' %>" />
    </div>
    <button type="submit">Add Product</button>
  </form>
</main>